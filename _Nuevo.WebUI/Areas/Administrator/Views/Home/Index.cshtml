@{
    ViewData["Title"] = "Home | Administrator ";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .dataTables_wrapper {
        font-family: SFMono-Regular,Menlo,Monaco,Consolas,"Liberation Mono","Courier New",monospace line-height: 1.15;
        font-size: 12px;
    }
</style>
<div class="row">

    <div class="col-md-12 p-3 mt-2">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Watching Live ! </strong> The Table is gonna refresh every 5 second !
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Url</th>
                    <th>Status Code</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section JavaScript
{
    <script type="text/javascript">
        $(document).ready(function () {
            reloadTable();
            setInterval("reloadTable();", 10000);
        });
        function reloadTable() {
            $.ajax({
                type: "Get",
                url: "./Administrator/Target/Items",
                dataType: "json",
                contentType: "application/json;charset=utf-8;",
                success: function (result) {
                    $('#example').DataTable({
                        destroy: true,
                        "data": result,
                        "bPaginate": false,
                        "bLengthChange": false,
                        "bFilter": true,
                        "bInfo": false,
                        "bAutoWidth": true,
                        columns: [
                            { "data": "name" },
                            { "data": "url" },
                            { "data": "statusCode" }
                        ]
                    });
                },
                error: function (error) {
                    alert(error.statusText);
                }
            });
        };
    </script>
}


