@model TargetUpdateDto
@{
    ViewData["Title"] = "Update - Target";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3 mt-4 shadow" method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Url"></label>
        <span asp-validation-for="Url" class="text-danger"></span>
        <input asp-for="Url" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Start Of Period </label>
                    @Html.EditorFor(model => model.StartOfPeriod, new { htmlAttributes = new { @class = "form-control my-date-start" } })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>End Of Period </label>
                    @Html.EditorFor(model => model.EndOfPeriod, new { htmlAttributes = new { @class = "form-control my-date-end" } })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" asp-for="@Model.IsWork" class="custom-control-input" id="customCheck1">
            <label class="custom-control-label" for="customCheck1">Is Work ?</label>
        </div>
    </div>
    <button type="submit" class="btn btn-info btn-sm">Update</button>
</form>

@section JavaScript
{
    <script src="~/lib/jquery/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery-validate/jquery.validate.unobtrusive.min.js"></script>
}
